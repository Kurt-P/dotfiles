#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

complete -cf sudo
complete -cf man
complete -cf whatis
complete -cf manswitch

PS1='[\u@\h \W]\$ '

alias ls='ls --color=auto'

alias pacman='sudo pacman'
# '[r]emove [o]rphans' - recursively remove ALL orphaned packages
alias pacro="pacman -Qtdq > /dev/null && pacman -Rs \$(pacman -Qtdq | sed -e ':a;N;$!ba;s/\n/ /g')"

export EDITOR="vim"

## Scripts
#PATH=$PATH:$HOME/Scripts
#export PATH

alias rm='rm -rf'
alias cp='cp -r'
alias mkdir='mkdir -p'
alias ll='ls -l'
alias la='ls -A'
alias clear='clear && ls'
alias ping='ping -c 5'
alias ifconfig='ip addr'

## History stuff
HISTCONTROL=ignoreboth
HISTSIZE=1000
HISTFILESIZE=2000

## Show the contence of the folder you cd into.
cd() {
    if [ -n "$1" ] ; then
        builtin cd "$@" && ls
    else
        builtin cd ~ && ls
    fi
}

## Quickly extract the contents of a file
ex () {
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1        ;;
      *.tar.gz)    tar xvzf $1     ;;
      *.bz2)       bunzip2 $1       ;;
      *.rar)       rar x $1     ;;
      *.gz)        gunzip $1     ;;
      *.tar)       tar xvf $1        ;;
      *.tbz2)      tar xjf $1      ;;
      *.tgz)       tar xzf $1       ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1  ;;
      *.7z)        7z x $1    ;;
      *)           echo "'$1' cannot be extracted via extract()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

## Show the contence of your home foler when you first open a termainal.
ls

if [ -f /usr/bin/starship ]; then
    eval "$(starship init bash)"
fi

